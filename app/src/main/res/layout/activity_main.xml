<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lableMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text=" Media "
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/outerMediaLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lableMedia">

        <ImageView
            android:id="@+id/imgMedia"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/music" />

        <LinearLayout
            android:id="@+id/mediaLayout"
            android:layout_width="wrap_content"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/txtMedia"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_height="50dp"
                android:text="1"
                android:gravity="center_vertical"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>



    <TextView
        android:id="@+id/lableCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:text=" Call "
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outerMediaLayout" />
    <LinearLayout
        android:id="@+id/outerCallsLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lableCalls">

        <ImageView
            android:id="@+id/imgCalls"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/baseline_call_24" />

        <LinearLayout
            android:id="@+id/callsLayout"
            android:layout_width="wrap_content"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/txtCalls"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_height="50dp"
                android:text="1"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:background="@color/black" />
        </LinearLayout>

    </LinearLayout>




    <TextView
        android:id="@+id/lableNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:text=" Alarm "
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outerCallsLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lableNotifications">

        <ImageView
            android:id="@+id/imgNotifications"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@drawable/baseline_notifications_24" />

        <LinearLayout
            android:id="@+id/notificationLayout"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/black"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/txtNotifications"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_height="50dp"
                android:text="1"
                android:gravity="center_vertical"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:backgroundTint="@color/black"
        android:text="Edit"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>